<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Ingredient 1</th>
      <th>Ingredient 2</th>
      <th>Ingredient 3</th>
      <th>Ingredient 3</th>
      <th>Ingredient 4</th>
      <th>Ingredient 5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.ingredient_1 %></td>
        <td><%= user.ingredient_2 %></td>
        <td><%= user.ingredient_3 %></td>
        <td><%= user.ingredient_3 %></td>
        <td><%= user.ingredient_4 %></td>
        <td><%= user.ingredient_5 %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

