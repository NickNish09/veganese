    <!-- Header -->
    <header class="masthead d-flex">
      <div class="container text-center my-auto">
        <%= image_tag "img/veganeselogo.png", width: 250, height: 250 %> 
        <h3 class="mb-5">
          <!--<em>
            <p style="color: #ffff03">O que tem na sua geladeira?</p>
          </em>-->
          <div style="margin-left: 270px;"><p style="text-align: justify; color: #662e09">Sugerimos receitas Veganas para que você desfrute<br> de uma alimentação mais diversificada com pratos<br> feitos a partir de seus ingredientes.</p></div>
            <span style="color: #135416">Liste os ingredientes, receba a receita.</span><br>
        </h3>
        <a class="btn btn-warning btn-xl js-scroll-trigger" href="#about" style="background-color: #62ed58 !important; border: 1px solid #62ed58 !important;">COMECE AGORA</a>
      </div>
      <div class="overlay"></div>
    </header>

    <!-- About -->
    <section class="no-masthead d-flex content-section bg-warning" id="about">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-lg-8 mx-auto text-center">

            <i class="fa fa-leaf fa-2x mb-2 text-white"></i>

            <h2 class="text-dark mb-5">Escolha 5 ingredientes que estejam em sua geladeira. </h2>

            <% user = @user %>
            <%= form_with(model: user, remote: true, class:"form-group d-flex") do |form| %>
            <% if user.errors.any? %>
                <div id="error_explanation">
                <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
                </ul>
                </div>
            <% end %>


            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12 mb-4">
            
                        <%= form.text_field :ingredient_1, class:"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0", id:"inputEmail", placeholder:"Ingrediente 1..." %>
                    </div>

                    <div class="col-md-12 col-xs-12 col-sm-12 mb-4">
                    
                        <%= form.text_field :ingredient_2, class:"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0", id:"inputEmail", placeholder:"Ingrediente 2..." %>
                    </div>

                    <div class="col-md-12 col-xs-12 col-sm-12 mb-4">
                    
                        <%= form.text_field :ingredient_3, class:"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0", id:"inputEmail", placeholder:"Ingrediente 3..." %>
                    </div>

                    <div class="col-md-12 col-xs-12 col-sm-12 mb-4">
                    
                        <%= form.text_field :ingredient_4, class:"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0", id:"inputEmail", placeholder:"Ingrediente 4..." %>
                    </div>

                    <div class="col-md-12 col-xs-12 col-sm-12 mb-4">
                    
                        <%= form.text_field :ingredient_5, class:"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0", id:"inputEmail", placeholder:"Ingrediente 5..." %>
                    </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
        <div align="center">
            <a class="btn btn-dark btn-xl js-scroll-trigger" href="#signup">Continuar</a>
        </div>
        </div>

    </section>

    <!-- Signup Section -->
    <section id="signup" class="signup-section">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-lg-6 mx-auto text-center">

            <i class="fa fa-seedling fa-2x mb-2 text-white"></i>
            <h2 class="text-white mb-5">Coloque suas informações para receber as receitas!</h2>

                <div class="col-md-12 col-xs-12 col-sm-12 mb-4">    
                    <%= form.text_field :name, class:"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0", id:"inputEmail", placeholder:"Nome*" %>
                </div>

                <div class="col-md-12 col-xs-12 col-sm-12 mb-4">
                    <%= form.text_field :email, class:"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0", id:"inputEmail", placeholder:"Email*" %>
                </div>

                <div class="col-md-12 col-xs-12 col-sm-12 mb-4">
                    <%= form.text_field :phone, class:"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0", id:"inputEmail", placeholder:"Telefone" %>
                </div>
                <div class="actions">
                    <%= form.submit "Enviar", class: "btn btn-secondary btn-lg mx-auto" %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>


    <!-- Footer -->
    <footer class="footer text-center">
      <div class="container">
        <p class="text-muted small mb-0">Copyright © Vegane-se 2019</p>
      </div>
    </footer>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

